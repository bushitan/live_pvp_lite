}
.cover .box{
    box-shadow: 0 1px 3px rgba(0,0,0,.3);
}
.cover .title{
    padding: 7px 15px;
    font-size: 13pt;
    font-weight: bold;


}
.cover .summary{
    padding: 15px;
    font-size: 11pt;
    color: #999;
    border-top: 1px solid #F2F2F2;
    background: #fff;
    position: relative;   
}
.cover .like{    
    font-size: 8pt;
    padding: 8px 15px;
    color: #999;
    border-top: 1px solid #F2F2F2;
    background: #FAFAFA;
    position: relative;  
    text-align: right;
}