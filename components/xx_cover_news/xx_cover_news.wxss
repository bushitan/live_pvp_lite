.xx_list{
    padding: 0 15px;
    background-color: #fff;
}
.xx_list__node{
     padding:  15px 0; 
}
.xx_list__cover{
    margin: 0 -15px;
}
.xx_list__cover image{
    width: 100%;
    height: 150px;
    background-color: #ECECEC;
}

.xx_list__title{
    font-size: 11pt;
    color:  #151515;
}
.xx_text__center{
    text-align: center;
}

.xx_text__right{
    text-align: right;
}

.xx_list__time{
    font-size: 7pt;
    color:  #8d8d8d;
    margin-top:12px; 
}
/*栏目分割线  */
.xx_line__gray{
    content: "";
    border-bottom: 1rpx #f0f0f0 solid;
}
