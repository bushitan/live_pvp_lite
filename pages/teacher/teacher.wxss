/* 倒计时 */
.time_heng{
    position: fixed;
    top: 30px;
    width: 750rpx;
    display: flex;
    justify-content: center;
}
.time_heng label{
    font-size: 11pt;
    color: #fff;
    padding: 3px 6px;
    border-radius: 5px;
    background-color: rgba(136, 136, 136, 0.6);
}

/* 主题关闭按钮 */
.theme_cancel{
    display: flex;
    justify-content: center;
    width: 750rpx; 
    margin: auto;
    position: absolute;
    bottom: 20px;
}
.theme_cancel .bg{
    width: 48px;
    height: 48px;
    background-color: rgba(136, 136, 136, 0.6);
    border-radius: 50%;
}

.theme_cancel image{
    width: 36px;
    height: 36px;
    margin: 6px;
}

