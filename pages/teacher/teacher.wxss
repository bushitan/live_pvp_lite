/* 工具菜单 */
.tool{    z-index: 999;}
.share_heng ,.next_heng ,.back_heng ,.cancel ,.theme{
    position: fixed;
    width: 48px;
    height: 48px;
    background-color: rgba(136, 136, 136, 0.6);
    border-radius: 50%;
}

.share_heng image,.next_heng image ,.back_heng  image, .cancel image ,.theme image {
    width: 36px;
    height: 36px;
}
.cancel{
    right: 10px;
    bottom: 10px;
}
.theme{
    right: 10px;
    bottom: 70px;
}
.share_heng{
    left: 10px;
    top: 30px;
}

.next_heng{
    left: 10px;
    bottom: 10px;
}
.back_heng{
    left: 10px;
    bottom: 70px;
}

.share_heng image{    margin: 8px;}
.theme image{    margin: 4px;}
.next_heng image,.back_heng image , .cancel image{    margin: 6px;}



